    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar Test",
            "program": "${workspaceFolder}/src/index.js",
            "envFile": "${workspaceFolder}/env/testing/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar Develop",
            "program": "${workspaceFolder}/src/index.js",
            "envFile": "${workspaceFolder}/env/develop/.env"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector"
        }
    ]
}